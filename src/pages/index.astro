---
import Base from "@layouts/Base.astro";
import { Image } from "@astrojs/image/components";
import Banner from "@layouts/components/Banner.astro";
import KeyFeatures from "@layouts/components/KeyFeatures.astro";
import Testimonial from "@layouts/components/Testimonial.astro";
import Service from "@layouts/components/Service.astro";
import Cta from "@layouts/partials/Cta.astro";
import { getEntryBySlug } from "astro:content";
import CounterComponent from "@components/about/CounterComponent.astro";

const homepage = await getEntryBySlug("homepage", "index");
const { counter, banner, key_features, service, testimonial } = homepage.data;

const trafficLights = {
  title:"Say goodbye to the frustration of seeing your revenue come in, but struggling to track where it all goes",
  description:"With SalesManager, you can easily track your income and expenses, gaining insights into your business's profitability. No more struggling to understand where your money goes â€“ Know Traffic Lights for your Business"
}
const customer = {
  title:"450+ Customers",
  description:"We take immense pride in serving a vast clientele of satisfied customers. Our dedicated support ensures they receive excellent service, leaving them happy and content. Customer satisfaction is at the heart of everything we do."
}
---

<Base>
  <!-- banner -->
  <Banner banner={banner} />
  <!-- Customer Count -->
  <div class="container">
    <CounterComponent counter={counter} />
  </div>
  
  <!-- Customers -->
  <section class=" dark:bg-gray-800 dark:text-gray-100 mb-24">
    <div class="container flex flex-col  lg:flex-row">
      <div class="flex flex-col w-full lg:w-2/3 ">

        <h2 class="text-4xl font-semibold leadi">{customer.title}</h2>
        <p class="mt-4 mb-8 text-md"> {customer.description}</p>

      </div>
      <div class="w-full lg:w-1/3 h-[250px]" style="background-image: url('https://res.cloudinary.com/kolynz-b/image/upload/v1690185952/wingerstore/wingersoft/map_coverage_2022_NOV-removebg-preview_oqhf03.png'); background-position: center center; background-size: cover;"></div>
    </div>
</section>
  <!-- key features -->
  <KeyFeatures key_features={key_features} />
  <!-- Traffic Lights -->
  <section class=" dark:bg-gray-800 dark:text-gray-100">
    <div class="container flex flex-col mx-auto lg:flex-row">
      <div class="w-full lg:w-1/3" style="background-image: url('https://res.cloudinary.com/kolynz-b/image/upload/v1690184232/wingerstore/wingersoft/Traffic-Lights-removebg-preview_ab7rpi.png'); background-position: center center; background-size: cover;"></div>
      <div class="flex flex-col w-full p-6 lg:w-2/3 md:p-8 lg:p-12">

        <h2 class="text-4xl font-semibold leadi">{trafficLights.title}</h2>
        <p class="mt-4 mb-8 text-md"> {trafficLights.description}</p>

      </div>
    </div>
  </section>



  <!-- service -->
  <Service service={service} />


  <!-- testimonial -->
  <Testimonial testimonial={testimonial} />
  <!-- call to action -->
  <Cta />
</Base>
